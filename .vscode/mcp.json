{
	"servers": {
		"github": {
			"url": "https://api.githubcopilot.com/mcp/",
			"headers": {
				"Authorization": "${input:Authorization}"
			}
		},
		"microsoft-learn": {
			"url": "https://learn.microsoft.com/api/mcp"
		}
	},
	"inputs": [
		{
			"id": "Authorization",
			"type": "promptString",
			"description": "Authentication token (PAT or App token)",
			"password": true
		}
	]
}
